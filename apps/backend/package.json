{
  "name": "threatsea_be",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/src/index.js",
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ci": "vitest run --reporter=default --reporter=junit --outputFile.junit=./junit.xml --coverage",
    "dependency-check": "dependency-check --project \"ThreatSea App Server\" --scan . --out .",
    "license-check": "license-checker --production --csv > licenses.csv",
    "db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate"
  },
  "dependencies": {
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "csrf-sync": "4.2.1",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.5",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "express-ws": "5.0.2",
    "helmet": "8.1.0",
    "json-stable-stringify": "1.3.0",
    "jsonwebtoken": "9.0.2",
    "nocache": "4.0.0",
    "node-fetch": "3.3.2",
    "passport": "0.7.0",
    "passport-custom": "1.1.1",
    "passport-microsoft": "2.1.0",
    "pg": "8.16.3",
    "reflect-metadata": "0.2.2",
    "socket.io": "4.8.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.18.7",
    "@types/passport": "1.0.17",
    "@types/passport-microsoft": "2.1.0",
    "@types/pg": "8.15.5",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "drizzle-kit": "0.31.5",
    "eslint": "9.36.0",
    "nanoid": "5.1.6",
    "supertest": "7.1.4",
    "tsc-alias": "1.8.16",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "imports": {
    "#*": "./src/*"
  },
  "lint-staged": {
    "*.{cjs,js,jsx,mjs,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{html,json,md,yaml,yml,xml}": [
      "prettier --check"
    ]
  }
}
