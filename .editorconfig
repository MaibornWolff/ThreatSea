# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.{cjs,js,jsx,mjs,ts,tsx}]
tab_width = 4
indent_size = 4

[*.{html,json,yaml,yml,xml}]
tab_width = 2
indent_size = 2
